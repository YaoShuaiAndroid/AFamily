<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:id="@+id/item_frag3_root"
    android:paddingTop="15dp"
    android:paddingBottom="12dp"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/item_frag3_img"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/c_sf_7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_frag3_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="14sp"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"
            android:text="这就是二十四节气（问津图书获奖绘本，共四册）"/>
        <TextView
            android:id="@+id/item_frag3_bs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="13sp"
            android:singleLine="true"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:text="郭靖，新华出版社"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff00"
                android:text="¥250.00"/>
            <TextView
                android:id="@+id/item_yj_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#ccc"
                android:text="¥350.00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--<RatingBar-->
                <!--android:id="@+id/ratingBar"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="10dp"-->
                <!--android:numStars="5"-->
                <!--android:rating="2.5"-->
                <!--android:stepSize="0.5"-->
                <!--style="@style/foodRatingBar"-->
                <!--/>-->
            <com.family.afamily.view.StarBar
                android:id="@+id/item_frag3_star"
                android:layout_below="@+id/display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:starEmpty="@mipmap/ic_star_2"
                app:starFill="@mipmap/ic_star_1"
                app:starDistance="5dp"
                app:starCount="5"
                app:starSize="15dp"/>
            <TextView
                android:id="@+id/item_frag3_comm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#ccc"
                android:textSize="13sp"
                android:text="2525560条好评"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>