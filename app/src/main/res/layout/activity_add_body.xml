<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_back_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/add_body_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/image_person"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:text="点击修改图像"
            android:textColor="#666"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEE"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#EEE"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#333"
                android:text="宝宝姓名"/>
            <EditText
                android:id="@+id/add_body_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_marginLeft="140dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:maxLength="5"
                android:hint="请填写"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:textColorHint="#666"
                android:textColor="#aaa"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#EEE"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#333"
                android:text="宝宝性别"/>
            
            <LinearLayout
                android:id="@+id/body_boy_lin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/body_boy_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/select_true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:hint="小王子"
                    android:textColor="#aaa"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/body_girl_lin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/body_boy_lin"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/body_girl_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/select_false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:hint="小公主"
                    android:textColor="#aaa"
                    />
            </LinearLayout>
            
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#EEE"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#333"
                android:text="宝宝生日"/>
            <TextView
                android:id="@+id/body_bir_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_marginLeft="140dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:hint="请填写"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:textColorHint="#666"
                android:textColor="#aaa"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"

            android:background="#EEE"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone">
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#333"
                android:text="宝宝身高(cm)"/>
            <TextView
                android:id="@+id/body_height_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_marginLeft="140dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:hint="请填写"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:textColorHint="#666"
                android:textColor="#aaa"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:background="#EEE"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone">
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#333"
                android:text="宝宝体重(kg)"/>
            <TextView
                android:id="@+id/body_weight_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_marginLeft="140dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:hint="请填写"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:textColorHint="#666"
                android:textColor="#aaa"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/add_body_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_login_25_yellow"
        android:gravity="center"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="16sp" />
</LinearLayout>
