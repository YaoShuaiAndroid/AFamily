<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent">
    <include layout="@layout/base_back_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42.5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ext_tab1_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="一级推广"
                android:textColor="@color/color_yellow"
                android:textSize="14sp" />

            <View
                android:id="@+id/ext_tab1_v"
                android:layout_width="wrap_content"
                android:layout_height="2.5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/color_yellow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ext_tab2_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="二级推广"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:id="@+id/ext_tab2_v"
                android:layout_width="wrap_content"
                android:layout_height="2.5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/color_yellow"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/line_10dp_layout"/>
    <com.superrecycleview.superlibrary.recycleview.SuperRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:id="@+id/my_ext_list_rv"/>
</LinearLayout>