<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title_forget_pw_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:onClick="back"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="7dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_back_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/color_yellow"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_head_register"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/register_head"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:textColor="#9E9E9E"
        android:text="点击设置头像"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/color_yellow"
                android:text="*"/>
            <EditText
                android:id="@+id/edit_nick_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@color/hint_login_color"
                android:hint="输入名字或昵称"
                android:maxLength="10"
                android:inputType="text"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="8dp"
            android:background="#dedede"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/color_yellow"
                android:text="*"/>
            <EditText
                android:id="@+id/edit_pw_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@color/hint_login_color"
                android:hint="输入密码（至少6位）"
                android:maxLength="20"
                android:inputType="textPassword"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="8dp"
            android:background="#dedede"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/color_yellow"
                android:text="*"/>
            <EditText
                android:id="@+id/edit_repw_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@color/hint_login_color"
                android:hint="再次输入密码"
                android:maxLength="20"
                android:inputType="textPassword"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="8dp"
            android:background="#dedede"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check_register"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="阅读并同意"
                android:paddingLeft="5dp"
                android:checked="true"
                android:gravity="top"
                android:textSize="13sp"
                android:textColor="#777"
                style="@style/MyCheckBox"/>
            <TextView
                android:id="@+id/agreement_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name_xy"
                android:checked="true"
                android:textSize="13sp"
                android:textColor="@color/color_yellow"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            style="@style/btn_login_style"
            android:text="注册"
            android:layout_marginTop="35dp"/>
        </LinearLayout>
</LinearLayout>