    <RelativeLayout
        android:id="@+id/setting_clean_cache"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="10dp"
        android:paddingRight="12dp"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333"
            android:text="清除缓存"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_arrow_g_h"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:id="@+id/setting_feedback"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333"
            android:text="意见反馈"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_arrow_g_h"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:id="@+id/setting_check_update"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333"
            android:text="检查更新"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/setting_update_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#ccc"
            android:visibility="visible"
            android:text="已是最新版本"
            android:layout_marginRight="22dp"/>

        <TextView
            android:id="@+id/setting_update_has"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="new"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="12sp"
            android:textColor="#fff"
            android:background="@drawable/circle_red_bg"/>
        <ImageView
            android:id="@+id/setting_arrow"
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_arrow_g_h"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:id="@+id/setting_about_us"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333"
            android:text="关于我们"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_arrow_g_h"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:id="@+id/setting_qr_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333"
            android:text="微信二维码"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_arrow_g_h"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>

    <TextView
        android:id="@+id/setting_logout_btn"
        android:layout_width="match_parent"
        style="@style/btn_login_style"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:text="退出登录"
        android:layout_marginTop="45dp"/>

</LinearLayout>