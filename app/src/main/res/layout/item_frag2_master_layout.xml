<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:id="@+id/item_master_root_ll"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/item_master_head_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/item_master_head_iv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@mipmap/ic_user_head"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/item_master_btn"
            android:layout_toRightOf="@+id/item_master_head_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_master_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="小小百灵鸟"
                android:textColor="#222"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_master_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="星期一 3:21pm"
                android:textColor="#999"
                android:textSize="13sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/item_master_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/master_4_yellow_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_yellow"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="+关注"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_master_decs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="当boss宝宝换上真人头像后我就笑了当boss宝宝换上真人头像后我就笑了当boss宝宝换上真人头像后我就笑了"
        android:textColor="#222222"
        android:textSize="13.5sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_master_video"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/item_bg_1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
            <TextView
                android:id="@+id/item_master_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="#999"
                android:text="2017-12-6 12:15"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|right"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/item_master_zan_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_follow"/>
                <TextView
                    android:id="@+id/item_master_zan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="5"
                    android:textColor="#999"
                    android:paddingLeft="3dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="30dp"
                    android:src="@mipmap/ic_recomment"/>
                <TextView
                    android:id="@+id/item_master_pl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="55"
                    android:textColor="#999"
                    android:paddingLeft="3dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>