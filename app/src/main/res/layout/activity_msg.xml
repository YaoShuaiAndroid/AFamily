<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_back_title_layout"/>
    <com.superrecycleview.superlibrary.recycleview.SuperRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:id="@+id/msg_list_rv"/>
    <LinearLayout
        android:id="@+id/msg_bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/msg_del_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login_25_yellow"
            android:text="删除"
            android:textSize="16sp"
            android:textColor="#fff"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:layout_marginRight="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"/>
        <TextView
            android:id="@+id/msg_clean_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login_25_yellow"
            android:layout_marginLeft="15dp"
            android:text="清空"
            android:textSize="16sp"
            android:textColor="#fff"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"/>
    </LinearLayout>
</LinearLayout>