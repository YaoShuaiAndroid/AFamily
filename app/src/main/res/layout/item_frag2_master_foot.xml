<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/master_yuan_huan_bg"/>
        <ImageView
            android:id="@+id/item_master_head_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_user_head"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_master_fans_tv"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="#666"
        android:text="粉丝62"/>
    <TextView
        android:id="@+id/item_master_video_tv"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="#666"
        android:text="视频62"/>
    <TextView
        android:id="@+id/item_master_follow_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/fillet_4_yellow_bg"
        android:text="+关注"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="13sp"
        />
</LinearLayout>