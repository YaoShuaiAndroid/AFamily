<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_back_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42.5dp"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_yfb_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已发布"
                android:textColor="@color/color_yellow"
                android:textSize="14sp" />

            <View
                android:id="@+id/video_yfb_v"
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:background="@color/color_yellow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_dsp_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="待审批"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:id="@+id/video_dsp_v"
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:background="@color/color_yellow"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_btg_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="审核不通过"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:id="@+id/video_btg_v"
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:background="@color/color_yellow"
                android:visibility="invisible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_upload_ing_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="上传中"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:id="@+id/video_upload_ing_v"
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:background="@color/color_yellow"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
    <!--<include layout="@layout/line_10dp_layout"/>-->
    <com.superrecycleview.superlibrary.recycleview.SuperRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:id="@+id/my_video_list_rv"/>
</LinearLayout>