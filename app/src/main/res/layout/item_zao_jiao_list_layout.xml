<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="#ffffff"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:elevation="2dp">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/item_zaoj_img"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:src="@mipmap/item_bg_4"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/item_zaoj_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_zaoj_img"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="宝宝瘦不等于营养不良，别乱补ddd"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="#333"
            android:layout_marginTop="15dp"/>
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/item_zaoj_title"-->
            <!--android:layout_toRightOf="@+id/item_zaoj_img"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:text="一味多吃可能会引起。。。。"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:textSize="13sp"-->
            <!--android:textColor="#999"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_zaoj_img"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/item_iv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_play_tl"/>

            <TextView
                android:id="@+id/item_zj_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_iv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:textSize="13sp"
                android:textColor="#999"/>
            <TextView
                android:id="@+id/item_zj_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="2:30"
                android:textSize="13sp"
                android:textColor="#999"/>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>


