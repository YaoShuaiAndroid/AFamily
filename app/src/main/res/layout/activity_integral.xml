<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <include layout="@layout/base_back_title_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/integral_banner"
                android:layout_width="match_parent"
                app:image_scale_type="fit_xy"
                android:layout_height="150dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/integral_tab1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_integral_tab_1"/>
                    <TextView
                        android:id="@+id/integral_tab1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:text="积分2355"
                        android:layout_marginTop="7dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/integral_tab2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_integral_tab_2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:text="兑换记录"
                        android:layout_marginTop="7dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/integral_tab3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_integral_tab_3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:text="积分明细"
                        android:layout_marginTop="7dp"/>
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/line_10dp_layout"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp">
                <ImageView
                    android:id="@+id/integral_all_tab"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/integral_img_1"/>
                <ImageView
                    android:id="@+id/integral_hb_tab"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@mipmap/integral_img_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp">
                <ImageView
                    android:id="@+id/integral_wj_tab"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/integral_img_3"/>
                <ImageView
                    android:id="@+id/integral_yhj_tab"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@mipmap/integral_img_4"/>
            </LinearLayout>
            <include layout="@layout/line_10dp_layout"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="15dp">
                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="#fa9a27"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所有商品"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:paddingLeft="7dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/line_color"/>
            <com.family.afamily.view.MyGridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:horizontalSpacing="0.8dp"
                android:verticalSpacing="0.8dp"
                android:background="@color/line_color"
                android:numColumns="2"
                android:id="@+id/integral_list_rv"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>