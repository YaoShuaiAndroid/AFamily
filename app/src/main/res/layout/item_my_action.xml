<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/item_action_root"
        android:padding="10dp">
        <ImageView
            android:id="@+id/item_action_img"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:src="@mipmap/item_bg_x"/>
        <TextView
            android:id="@+id/item_action_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_action_img"
            android:textColor="#333"
            android:layout_marginTop="7dp"
            android:textSize="14sp"
            android:text="专家：宝宝爱玩水是天性，玩水有益身心，玩出按时打卡机发阿斯蒂芬"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_action_img"
        android:layout_below="@+id/item_action_name"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="14sp"
            android:text="时间："/>
        <TextView
            android:id="@+id/item_action_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_yellow"
            android:textSize="14sp"
            android:text="2017-8-25"/>
    </LinearLayout>
    <View
        android:id="@+id/item_action_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/item_action_img"
        android:layout_marginTop="10dp"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_action_line"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:clickable="true"
        android:gravity="right|center_vertical">
        <TextView
            android:id="@+id/item_action_state"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_yellow"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_action_ckbm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_25_huis_line_bg"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginRight="15dp"
            android:text="查看报名情况"
            android:textColor="#999"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/item_action_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_25_huis_line_bg"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="取消报名"
            android:textColor="#999"
            android:textSize="13sp"/>
    </LinearLayout>
</RelativeLayout>