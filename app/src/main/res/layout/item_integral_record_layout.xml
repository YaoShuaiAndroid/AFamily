<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_intg_record_img"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginRight="7dp"
        android:src="@mipmap/item_bg_x"/>
    <TextView
        android:id="@+id/item_intg_record_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="阿萨德付款阿萨德飞进来阿斯蒂芬阿斯蒂芬阿斯蒂芬阿斯蒂芬"
        android:layout_toRightOf="@+id/item_intg_record_img"/>
    <TextView
        android:id="@+id/item_intg_record_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_yellow"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/item_intg_record_img"
        android:layout_alignBottom="@+id/item_intg_record_img"
        android:layout_marginBottom="5dp"
        android:text="200000积分"/>
    <TextView
        android:id="@+id/item_intg_record_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#777777"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/item_intg_record_img"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:text="2017-12-15"/>
</RelativeLayout>