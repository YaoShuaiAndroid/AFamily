<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/item_car_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="7dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/item_bg_4"
            />
        <TextView
            android:id="@+id/item_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_marginTop="7dp"
            android:textSize="14sp"
            android:maxLines="2"
            android:layout_toRightOf="@+id/item_car_img"
            android:text="费雪宝宝绘本费雪宝宝绘本费雪宝宝绘本费雪宝宝绘本"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_car_img"
            android:layout_below="@+id/item_product_title"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_yellow"
                android:textSize="15sp"
                android:text="¥69.00"/>
            <LinearLayout
                android:id="@+id/car_item_number_ll"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="1dp"
                android:layout_gravity="right"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/car_item_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x1"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>