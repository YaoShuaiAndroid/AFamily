<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_back_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="50dp">
        <EditText
            android:id="@+id/edit_old_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColorHint="@color/hint_login_color"
            android:hint="输入旧密码"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textSize="15sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="8dp"
            android:background="#dedede"/>
        <EditText
            android:id="@+id/edit_pw_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/hint_login_color"
            android:hint="输入新密码"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="8dp"
            android:background="#dedede"/>
        <EditText
            android:id="@+id/edit_rpw_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/hint_login_color"
            android:hint="输入确认密码"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="8dp"
            android:background="#dedede"/>
        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            style="@style/btn_login_style"
            android:text="提交"
            android:layout_marginTop="45dp"/>
    </LinearLayout>
</LinearLayout>