<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/item_comment_root_rl"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_comm_head"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="7dp"
        android:src="@mipmap/ic_user_head"/>
    <TextView
        android:id="@+id/item_comm_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_comm_head"
        android:layout_toLeftOf="@+id/item_comm_time"
        android:layout_marginRight="7dp"
        android:textSize="15sp"
        android:textColor="#333"
        android:layout_marginTop="5dp"
        android:text="珠珠"/>
    <TextView
        android:id="@+id/item_comm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="13sp"
        android:textColor="#999"
        android:layout_marginTop="5dp"
        android:text="2017-8-25 12:30"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:layout_below="@+id/item_comm_nick"
        android:layout_toRightOf="@+id/item_comm_head">
        <TextView
            android:id="@+id/item_comm_decs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#999"
            android:layout_marginTop="5dp"
            android:text="回复：爱是你我"/>
        <ImageView
            android:id="@+id/item_comm_pic"
            android:adjustViewBounds="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:src="@mipmap/item_bg_4"/>
    </LinearLayout>


</RelativeLayout>