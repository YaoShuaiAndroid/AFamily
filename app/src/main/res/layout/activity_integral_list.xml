<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <include layout="@layout/base_back_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tab_integral_in"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_integral_left_bg"
            android:gravity="center"
            android:paddingTop="7dp"
            android:layout_marginRight="-0.8dp"
            android:textColor="@drawable/tab_integral_text"
            android:paddingBottom="7dp"
            android:text="收入"/>
        <TextView
            android:id="@+id/tab_integral_out"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-0.8dp"
            android:background="@drawable/tab_integral_right_bg"
            android:gravity="center"
            android:paddingTop="7dp"
            android:textColor="@drawable/tab_integral_text"
            android:paddingBottom="7dp"
            android:text="支出"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F7F7F7"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="项目"
            android:textColor="#777"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F7F7F7"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="日期"
            android:textColor="#777"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F7F7F7"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="明细"
            android:textColor="#777"
            android:textSize="14sp" />
    </LinearLayout>
    <com.superrecycleview.superlibrary.recycleview.SuperRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:id="@+id/integral_list_rv"/>
</LinearLayout>