<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="30dp"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dialog_exchange_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:minLines="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#333"
                android:layout_marginLeft="125dp"
                android:paddingRight="10dp"
                android:text="是阿萨德付款就啊是打发爱尚峰景爱尚峰景"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/line_color"
                android:layout_marginTop="35dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:text="需扣积分："/>
                <TextView
                    android:id="@+id/dialog_exchange_k_integral_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_yellow"
                    android:textSize="15sp"
                    android:text="5566"/>
            </LinearLayout>
            <TextView
                android:id="@+id/dialog_exchange_integral_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:paddingRight="10dp"
                android:textSize="15sp"
                android:text="剩余积分：1500"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/line_color"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/dialog_submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_yellow"
                android:background="@drawable/fillet_15_yellow_bg"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="立即兑换"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_15_white_bg">
            <ImageView
                android:id="@+id/dialog_exchange_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/item_bg_x"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>