<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_everyday_img"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/item_bg_x" />

    <TextView
        android:id="@+id/item_everyday_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/item_everyday_img"
        android:text="这是标题爱上对方考虑阿萨德离开阿萨德付款控件"
        android:textColor="#555"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_everyday_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_everyday_img"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/item_everyday_img"
        android:text="2017-8-9"
        android:textColor="#999"
        android:textSize="13sp" />
</RelativeLayout>