<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <CheckBox
            android:id="@+id/item_car_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            style="@style/MyCheckBox"/>
        <ImageView
            android:id="@+id/item_car_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="7dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/item_bg_4"
            android:layout_toRightOf="@+id/item_car_check"/>
        <TextView
            android:id="@+id/item_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_marginTop="7dp"
            android:textSize="14sp"
            android:maxLines="2"
            android:layout_toRightOf="@+id/item_car_img"
            android:text="费雪宝宝绘本费雪宝宝绘本费雪宝宝绘本费雪宝宝绘本"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_car_img"
            android:layout_below="@+id/item_product_title"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_yellow"
                android:textSize="15sp"
                android:text="¥69.00"/>
            <LinearLayout
                android:id="@+id/car_item_number_ll"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="1dp"
                android:layout_gravity="right"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:background="@drawable/fillet_4_huis_line_bg">
                <ImageView
                    android:id="@+id/car_item_sub"
                    android:layout_width="25dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/ic_car_jian"/>
                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="#ccc"/>
                <TextView
                    android:id="@+id/car_item_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="#ccc"/>
                <ImageView
                    android:id="@+id/car_item_add"
                    android:layout_width="25dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/ic_car_add"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>