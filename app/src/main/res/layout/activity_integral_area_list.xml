<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_back_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42.5dp"
        android:background="#fff"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/intgl_all_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="所有"
                android:textColor="@color/color_yellow"
                android:textSize="14sp" />

            <View
                android:id="@+id/intgl_all_v"
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:background="@color/color_yellow" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/intgl_hb_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="绘本"
                android:textColor="#333333"
                android:textSize="14sp" />

            <View
                android:id="@+id/intgl_hb_v"
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:visibility="invisible"
                android:background="@color/color_yellow" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/intgl_coupon_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="优惠劵"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:id="@+id/intgl_coupon_v"
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:background="@color/color_yellow"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/intgl_jj_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="玩具/教具"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:id="@+id/intgl_jj_v"
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:background="@color/color_yellow"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color" />
    <com.superrecycleview.superlibrary.recycleview.SuperRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:background="@color/line_color"
        android:scrollbars="none"
        android:id="@+id/integral_list_rv"/>
</LinearLayout>