<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_back_title_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c4c4c4"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:text="标题"/>
        <EditText
            android:id="@+id/release_act_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="80dp"
            android:layout_centerVertical="true"
            android:textColor="#333"
            android:textSize="14sp"
            android:hint="请输入活动标题"
            android:textColorHint="#c4c4c4"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c4c4c4"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:text="对象"/>
        <EditText
            android:id="@+id/release_act_obj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="80dp"
            android:layout_centerVertical="true"
            android:textColor="#333"
            android:textSize="14sp"
            android:hint="请输入活动对象"
            android:textColorHint="#c4c4c4"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c4c4c4"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:text="人数"/>
        <EditText
            android:id="@+id/release_act_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#333"
            android:textSize="14sp"
            android:inputType="number"
            android:maxLength="5"
            android:hint="请输入人数（0为不限）"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:textColorHint="#c4c4c4"
            android:layout_toLeftOf="@+id/action_dw_tv" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#c4c4c4"
            android:textSize="14sp"
            android:text="（人）"
            android:id="@+id/action_dw_tv" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c4c4c4"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:text="时间"/>
        <TextView
            android:id="@+id/release_act_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_centerVertical="true"
            android:textColor="#333"
            android:textSize="14sp"
            android:hint="请选择活动时间"
            android:textColorHint="#c4c4c4"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c4c4c4"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:text="地点"/>
        <EditText
            android:id="@+id/release_act_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="80dp"
            android:layout_centerVertical="true"
            android:textColor="#333"
            android:textSize="14sp"
            android:hint="请输入活动地点"
            android:textColorHint="#c4c4c4"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c4c4c4"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:text="更多"/>
        <TextView
            android:id="@+id/release_act_more_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:textColor="#333"
            android:textSize="14sp"
            android:hint="请完善封面图和活动说明"
            android:textColorHint="#c4c4c4"
            android:layout_marginLeft="80dp"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_arrow_g_h"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/imageView3" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <TextView
        android:id="@+id/release_act_submit_btn"
        android:layout_width="match_parent"
        style="@style/btn_login_style"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="发布活动"
        android:layout_marginTop="60dp"/>
</LinearLayout>