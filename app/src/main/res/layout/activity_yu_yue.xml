<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_back_title_layout"/>
    <TextView
        android:id="@+id/yy_order_sn_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="订单编号："
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="#777"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:id="@+id/yy_head_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/yyue_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/yyue_img">
            <TextView
                android:id="@+id/yy_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333"
                />
            <TextView
                android:id="@+id/yy_decs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#888"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/yy_arrow_iv"
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:src="@mipmap/ic_arrow_r"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_color"/>


    <RelativeLayout
        android:id="@+id/yy_select_time_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/yy_t_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_yuyue_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="预约时间"
            android:layout_toRightOf="@+id/yy_t_img"
            android:layout_centerVertical="true"
            android:textColor="#888"
            android:textSize="13.5sp" />
        <TextView
            android:id="@+id/yy_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:hint="选择预约时间"
            android:textColorHint="#dddddd"
            android:layout_toLeftOf="@+id/yy_t_arrow"
            android:layout_centerVertical="true"
            android:textColor="#333"
            android:textSize="13.5sp" />
        <ImageView
            android:id="@+id/yy_t_arrow"
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_arrow_r"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"/>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/yy_time_ll"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_yuyue_time" />

        <TextView
            android:id="@+id/yy_yysj_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="营业时间：10:00-22:00"
            android:textColor="#888"
            android:textSize="13.5sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_yuyue_name"/>
        <TextView
            android:id="@+id/yy_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游泳池："
            android:textColor="#888"
            android:textSize="13.5sp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_yuyue_type"/>
        <TextView
            android:id="@+id/yy_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约类型："
            android:textColor="#888"
            android:textSize="13.5sp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_yuyue_addre" />

        <TextView
            android:id="@+id/yy_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆地址："
            android:textColor="#888"
            android:textSize="13.5sp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/yy_submit_tv"
        android:layout_width="match_parent"
        style="@style/btn_login_style"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:text="提交预约"
        android:layout_marginTop="45dp"/>
</LinearLayout>