<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/item_clt_root_rl"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/item_clt_text_check"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:layout_centerVertical="true"
        style="@style/MyCheckBox"/>
    <ImageView
        android:id="@+id/item_clt_text_img"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/item_bg_1"
        android:layout_toRightOf="@+id/item_clt_text_check"/>
    <TextView
        android:id="@+id/item_clt_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:minLines="2"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:textColor="#333"
        android:text="专家说，多喝开水就可以长高，不用吃饭，开水要烧到100度，然后直接喝"
        android:layout_toRightOf="@+id/item_clt_text_img"/>
    <TextView
        android:id="@+id/item_clt_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:visibility="gone"
        android:textSize="15sp"
        android:text="￥15.00"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/item_clt_text_title"
        android:layout_toRightOf="@+id/item_clt_text_img"/>
    <TextView
        android:id="@+id/item_clt_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_alignBottom="@+id/item_clt_text_img"
        android:text="2017-6-9"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/item_clt_text_img"/>
</RelativeLayout>