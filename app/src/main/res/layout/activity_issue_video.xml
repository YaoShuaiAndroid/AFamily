<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <include layout="@layout/base_back_title_layout"/>
    <EditText
        android:id="@+id/issue_video_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="top"
        android:background="@null"
        android:padding="10dp"
        android:hint="视频描述"
        android:textColorHint="#999"
        android:textSize="14sp"
        android:minLines="7"/>
    <include layout="@layout/line_10dp_layout"/>
    <RelativeLayout
        android:id="@+id/issue_video_time_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_centerVertical="true"
            android:text="记录时间"/>
        <ImageView
            android:id="@+id/arrow_iv"
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_g_h"/>
        <TextView
            android:id="@+id/issue_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arrow_iv"
            android:textColor="@color/color_yellow"
            android:layout_marginRight="7dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColorHint="#cccccc"
            android:hint="选择拍摄时间"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:id="@+id/issue_video_address_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_centerVertical="true"
            android:text="所在位置"/>
        <ImageView
            android:id="@+id/arrow_iv2"
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_g_h"/>
        <TextView
            android:id="@+id/issue_video_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arrow_iv2"
            android:textColor="@color/color_yellow"
            android:layout_marginRight="7dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColorHint="#cccccc"
            android:hint="不显示位置"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
