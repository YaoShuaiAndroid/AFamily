    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/video_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#333"
            android:visibility="gone"
            android:padding="10dp"
            android:text="视频大小：45MB"/>
        <RelativeLayout
            android:id="@+id/release_preview_rl"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <com.family.afamily.view.LandLayoutVideo
                android:id="@+id/release_player"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <ImageView
                android:id="@+id/release_close_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_hb_close_img"
                android:layout_alignParentRight="true"
                android:padding="7dp"
                android:layout_margin="5dp"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/release_add_video_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/release_add_video"
                android:layout_width="170dp"
                android:layout_height="130dp"
                android:background="#F2F2F2">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_add_video"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:text="(一次只能发布一个视频)\n上传视频大小不超能过100MB\n建议录制视频时使用720p录制"
                android:gravity="center"
                android:textColor="#999"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>