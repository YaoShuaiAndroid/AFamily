<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F8F8F8"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_marginRight="10dp">
        <RelativeLayout
            android:id="@+id/item_coupon_img"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:background="@mipmap/item_bg_juan">
            <TextView
                android:id="@+id/item_voucher_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#fff"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="满100.00元\n减20.00元"
                android:textSize="17sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/item_coupon_img"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_coupon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="游泳池免费体验劵"
                android:textColor="#777"
                />

            <TextView
                android:id="@+id/item_coupon_btn"
                android:layout_width="70dp"
                android:layout_height="22dp"
                android:background="@drawable/fillet_15_yellow_bg"
                android:textColor="@color/color_yellow"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:text="立即使用"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>