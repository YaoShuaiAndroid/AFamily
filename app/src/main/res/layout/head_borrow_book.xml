<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f8f8f8"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="#666"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:text="待还读书"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/borrow_my_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp">

        <ImageView
            android:id="@+id/borrow_img"
            android:layout_width="65dp"
            android:layout_height="56dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/item_bg_x" />

        <TextView
            android:id="@+id/borrow_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/borrow_img"
            android:text="费雪宝宝家庭教育绘本合辑（共10册）"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/borrow_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/borrow_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/borrow_img"
            android:text="到期：2017-8-25"
            android:textColor="#999"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="#666"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:text="借阅记录"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color"/>
</LinearLayout>