<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/bg_login">
        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content">-->
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="45dp"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:onClick="back"-->
                <!--android:src="@mipmap/ic_back"/>-->
        <!--</LinearLayout>-->
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:textColor="#222"
        android:textSize="22sp"
        android:text="登录"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="50dp">
        <EditText
            android:id="@+id/edit_phone_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="@color/hint_login_color"
            android:hint="输入手机号码"
            android:textSize="15sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="8dp"
            android:background="#dedede"/>

        <EditText
            android:id="@+id/edit_pw_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="22dp"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColorHint="@color/hint_login_color"
            android:hint="输入密码"
            android:textSize="15sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="8dp"
            android:background="#dedede"/>
        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            style="@style/btn_login_style"
            android:text="登录"
            android:layout_marginTop="45dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/text_register_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="注册账号"
                android:textColor="#aea591"/>
            <View
                android:layout_width="0.8dp"
                android:layout_height="14dp"
                android:background="#aea591"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>
            <TextView
                android:id="@+id/text_forget_pw_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="忘记密码？"
                android:textColor="#aea591"/>
            <View
            android:layout_width="0.8dp"
            android:layout_height="14dp"
            android:background="#aea591"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
            <TextView
                android:id="@+id/text_look_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="随便看看"
                android:textColor="#aea591"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>